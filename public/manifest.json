{
  "manifest_version": 3,
  "name": "Chem Crawler",
  "version": "0.0.12",
  "description": "A simple React app as a Chrome extension",
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["scripting", "sidePanel", "activeTab", "storage", "nativeMessaging"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "32": "static/images/logo/logo-white-blue-on-black-lg.png",
    "48": "static/images/logo/logo-white-blue-on-black-lg.png",
    "128": "static/images/logo/logo-white-blue-on-black-lg.png"
  }
}
