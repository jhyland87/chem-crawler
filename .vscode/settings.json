{
  "editor.tabSize": 2,
  "editor.defaultFormatter": "vscode.typescript-language-features",
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.defaultFoldingRangeProvider": "vscode.typescript-language-features",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "jestTestExplorer.logpanel": true,
  "jest.runMode": "on-demand",
  "notebook.defaultFormatter": null,
  "typescript.format.insertSpaceAfterTypeAssertion": false,
  "editor.autoIndent": "full",
  "eslint.workingDirectories": [
    {
      "pattern": "src",
      "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        "dist",
        "dev"
      ]
    }
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.sortImports": "always",
  },
  "prettier.experimentalTernaries": true,
  "prettier.printWidth": 100,
  "javascript.preferences.organizeImports": {
    "typeOrder": "auto",
    "enabled": "explicit",
    //"style": "alphabetical",
    "sortOrder": ["lowercaseLetters", "uppercaseLetters"],
    "grouping": ["moduleSpecifier", "typeAndValue"],
    "caseFirst": "default"
  },

  "typescript.preferences.organizeImports": {
    "typeOrder": "auto",
    "enabled": true,
    //"style": "alphabetical",
    "sortOrder": ["lowercaseLetters", "uppercaseLetters"],
    "grouping": ["moduleSpecifier", "typeAndValue"],
    "caseFirst": "default"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter":"esbenp.prettier-vscode"
  },
  "eslint.ignoreUntitled": true
}