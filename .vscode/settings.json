{
  "editor.tabSize": 2,
  "editor.defaultFormatter": "vscode.typescript-language-features",
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.defaultFoldingRangeProvider": "vscode.typescript-language-features",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "jestTestExplorer.logpanel": true,
  "jest.runMode": "on-demand",
  "notebook.defaultFormatter": null,
  "typescript.format.insertSpaceAfterTypeAssertion": false,
  "editor.autoIndent": "full",
  "eslint.workingDirectories": [
    {
      "pattern": "src",
      "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        "dist",
        "dev"
      ]
    }
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.sortImports": "always",
  },
  "prettier.experimentalTernaries": true,
  "prettier.printWidth": 100,
  "javascript.preferences.organizeImports": {
    "typeOrder": "auto",
    "enabled": "explicit",
    //"style": "alphabetical",
    "sortOrder": [
      "lowercaseLetters",
      "uppercaseLetters"
    ],
    "grouping": [
      "moduleSpecifier",
      "typeAndValue"
    ],
    "caseFirst": "default"
  },
  "typescript.preferences.organizeImports": {
    "accentCollation": true,
    "typeOrder": "auto",
    "enabled": true,
    //"style": "alphabetical",
    "sortOrder": [
      "lowercaseLetters",
      "uppercaseLetters"
    ],
    "grouping": [
      "moduleSpecifier",
      "typeAndValue"
    ],
    "caseFirst": "default"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.ignoreUntitled": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.suggest.autoImports": false,
  "typescript.preferences.autoImportSuggestions": true,
  "typescript.preferences.autoImportSuggestionsMode": "literals",
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnType.enabled": true,
  "typescript.inlayHints.enumValues.enabled": true,
  "typescript.inlayHints.typeArguments.enabled": true,
  "typescript.inlayHints.typeParameters.enabled": true,
  "typescript.preferences.namingConvention": {
    "enabled": true,
    "options": {
      "camelCase": true,
      "pascalCase": true,
      "snake_case": true,
      "kebab-case": true
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "typescript.suggest.completeJSDocs": false,
  "jsdoc-generator.generateDescriptionForParameters": false,
  "jsdoc-generator.includeTypes": false,
  "javascript.suggest.completeJSDocs": true,
  "[graphql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}